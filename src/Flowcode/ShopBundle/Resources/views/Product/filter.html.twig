<div class="box box-success">
    <div class="row">
        <div class="col-sm-2 col-xs-3">
            <button type="button" class="btn btn-default btn-sm filter collapsed" data-toggle="collapse"
                    data-target="#filter">{{ 'filtrar'|trans| capitalize }} <i class="fa fa-filter"></i>
            </button>
        </div>
    </div>
    {% set open = "" %}
    {% if formFilter.price.left_number.vars.value > 0 or formFilter.price.right_number.vars.value > 0 or formFilter.category.vars.value|length > 0 or search|length > 0 %}
        {% set open = "in" %}
    {% endif %}
    <div class="">
        <div id="filter" class="collapse {{ open }} row filters-content">
            <form method="get" class="form-horizontal" id="filter" action="{{ path('product') }}">
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 col-xs-12">
                                Ordenar
                            </label>
                            <div class="col-sm-7 col-xs-12 row">
                                <select name="priceSort" class="form-control" id="priceSort" onchange="this.form.submit()">
                                    <option value="">
                                        Ordenar
                                    </option>
                                    <option value="ASC" {% if priceSort == 'ASC' %}selected{% endif %}>
                                        Menor precio
                                    </option>
                                    <option value="DESC" {% if priceSort == 'DESC' %}selected{% endif %}>
                                        Mayor precio
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 col-xs-12">
                                Categoría
                            </label>
                            <div class="col-sm-9 col-xs-12 row">
                                {{ form_widget(formFilter.category) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 col-xs-12">
                                Precio
                            </label>
                            <div class="col-sm-4 col-xs-6 row">
                                {{ form_widget(formFilter.price.left_number) }}
                            </div>
                            <div class="col-sm-4 col-xs-6 row">
                                {{ form_widget(formFilter.price.right_number) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 col-xs-12">
                                Búsqueda
                            </label>
                            <div class="col-sm-9 col-xs-12 row">
                                <input type="text" name="search" class="form-control" value="{{ search }}">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-default btn-sm" value="Submit">
                            <i class="fa fa-search"></i> Buscar
                        </button>
                        <a class="btn btn-link btn-sm" href="{{ path('product') }}?reset">
                            <i class="fa fa-times"></i> {{ 'clean' | trans | capitalize }}</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
