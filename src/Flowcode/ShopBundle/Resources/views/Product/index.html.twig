{% block products %}
<h1>{{ page.name }}</h1>

<div>
{{ page.description }}
</div>

<div class="row">
    {% for entity in pagination %}
    <div class="col-sm-4">
        <div class="thumbnail">
            <a href="{{ path("product_show", {'slug':entity.slug}) }}">
                <img src="{{ asset( entity.getImage.getWebPath ) }}" alt="" />
            </a>
            <div class="caption">
                <h2>{{"symbol.money"|trans|title}}{{ entity.price }}</h2>
                <p>{{ entity.name }}</p>
                <a href="#" class="btn btn-default add-to-cart">
                    <i class="fa fa-shopping-cart"></i>{{"add to cart"|trans|title}}
                </a>
            </div>
        </div>
    </div>
    {% else %}
    <div>no results</div>
    {% endfor %}
</div>

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}
