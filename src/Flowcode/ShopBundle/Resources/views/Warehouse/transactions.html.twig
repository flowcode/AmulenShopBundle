{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Warehouse'}, 'Warehouse') }} - {{ parent() }}{% endblock %}
{% macro thead(name, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('warehouse_sort', {field: field, type: 'ASC'}) }}">{{ label | trans({},'Warehouse') }}
                    <i class="fa fa-sort-down"></i></a>
            {% elseif sort.type == 'ASC' %}
                <a href="{{ path('warehouse_sort', {field: field, type: 'DESC'}) }}">{{ label | trans({},'Warehouse') }}
                    <i class="fa fa-sort-up"></i></a>
            {% endif %}
        {% else %}
            <a href="{{ path('warehouse_sort', {field: field, type: 'ASC'}) }}">{{ label | trans({},'Warehouse') }} <i
                        class="fa fa-sort"></i></a>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% from _self import thead %}

{% block app_menu %}
    {{ include("FlowerStockBundle::appnav.html.twig", { 'app_warehouse_transactions': true}) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ 'Transacciones'|trans({'%entity%': 'Warehouse'}, 'Warehouse') }}
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
            </div>
            <div class="box-body">
                <form class="form-inline">
                    <div class="form-group">
                        <select name="filter_product" class="form-control">
                            <option value="">{{ 'Product'|trans({},'Product') }}</option>
                            {% for product in products %}
                                <option value="{{ product.id }}"
                                        {% if filter.product == product.id %}selected{% endif %}>
                                    {{ product }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <select name="filter_warehouse" class="form-control">
                            <option value="">{{ 'Warehouse'|trans({},'Product') }}</option>
                            {% for warehouse in warehouses %}
                                <option value="{{ warehouse.id }}"
                                        {% if filter.warehouse == warehouse.id %}selected{% endif %}>
                                    {{ warehouse }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-default">
                        <i class="fa fa-search"></i> {{ 'search'|trans|title }}
                    </button>
                    <a class="btn btn-default btn-sm" href="{{ path('warehouse_transactions') }}?reset">
                        <i class="fa fa-times"></i> {{ 'clean' | trans | capitalize }}
                    </a>
                </form>
                <table class="table table-hover record_properties">
                    <thead>
                    <th>{{ 'date'|trans({}, 'Product')|title }}</th>
                    <th>{{ 'Warehouse'|trans({}, 'Product') }}</th>
                    <th>{{ 'type'|trans({}, 'Product')|title }}</th>
                    <th>{{ 'cause'|trans({}, 'Product')|title }}</th>
                    <th>{{ 'product'|trans({}, 'Product')|title }}</th>
                    <th>{{ 'amount'|trans({}, 'Product')|title }}</th>
                    <th>{{ 'balance'|trans({}, 'Product')|title }}</th>
                    <th>{{ 'comments'|trans({}, 'Product')|title }}</th>
                    </thead>
                    <tbody>
                    {% for changeLog in paginator %}
                        <tr>
                            <td>{{ changeLog.date|date }}</td>
                            <td>{{ changeLog.warehouse }}</td>
                            <td>
                                {% if changeLog.type == 0 %}
                                    <span class="text-green">{{ 'stock_entry'|trans({}, 'Product')|title }}</span>
                                {% else %}
                                    <span class="text-warning">{{ 'stock_exit'|trans({}, 'Product')|title }}</span>
                                {% endif %}
                            </td>

                            {% if changeLog.sale and changeLog.type == 1 %}
                                <td>{{ 'sale'|trans({}, 'Sale') }}: {{ changeLog.sale }}</td>
                            {% else %}
                                <td></td>
                            {% endif %}

                            <td>{{ changeLog.product }}</td>
                            <td>{{ changeLog.amount }}</td>
                            <td>{{ changeLog.balance }}</td>
                            <td>{{ changeLog.description }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {{ knp_pagination_render(paginator) }}
            </div>
            <div class="box-footer">

            </div>

    </section>

{% endblock %}
