{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'StockTransferItem'}, 'StockTransferItem') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerStockBundle::appnav.html.twig", { 'app_transactions': true, 'app_transactions_transfers': true }) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href="{{ path('stock_transfersitem') }}"> {{ '%entity% list'|trans({'%entity%': 'StockTransferItem'}, 'StockTransferItem') }}</a>
            /
            {{ 'StockTransferItem' | trans({}, 'StockTransferItem') }}
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-body">

                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn-default btn" type="submit">{{ 'save'|trans | capitalize }}</button>
                </p>
                {{ form_end(edit_form) }}
            </div>
            <div class="box-footer">

                {{ form_start(delete_form) }}
                {{ form_widget(delete_form) }}

                <div class="btn-group record_actions">
                    <button class="btn btn-link btn-sm"
                            type="submit"> {{ 'Delete'|trans({}, 'StockTransferItem') }}</button>
                    <input name="modal" type="hidden" value="0">

                </div>
                <input name="modal" type="hidden" value="0">
                {{ form_end(delete_form) }}

            </div>
        </div>
    </section>
{% endblock %}


