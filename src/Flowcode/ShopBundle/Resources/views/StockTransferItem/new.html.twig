{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'StockTransferItem'}, 'StockTransferItem') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerStockBundle::appnav.html.twig", { 'app_transactions': true, 'app_transactions_transfers': true }) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>

        </h1>

    </section>
    <section class="content">
        <div class="box">
            <div class="box-body">
                {{ form_start(form, {action: path('stock_transfersitem_create')}) }}
                {{ form_widget(form) }}
                <p>
                    <button class="btn-default btn" type="submit">{{ 'save'|trans | capitalize }}</button>
                </p>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">

                <div class="btn-group record_actions"></div>

            </div>
        </div>
    </section>
{% endblock %}
