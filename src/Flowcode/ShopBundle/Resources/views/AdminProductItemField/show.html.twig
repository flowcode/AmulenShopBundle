{% extends "FlowcodeDashboardBundle:Default:layout.html.twig" %}

{% block title %}ProductItemField - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href="{{ path('admin_productitemfield') }}"> {{ 'ProductItemField list'|trans({'ProductItemField': 'ProductItemField'}, 'ProductItemField') }}</a>
            /
            {{ 'ProductItemField' | trans({}, 'ProductItemField') }}
        </h1>
    </section>
    <section class="content">
        <div class="box" id='showProductItemField'>
            <div class="box-header">
                <div class="box-tools  pull-right">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}

                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm"
                                type="submit"> {{ 'Delete'|trans({}, 'ProductItemField') }}</button>
                        <input name="modal" type="hidden" value="0">

                        <a class="btn btn-link  btn-sm" onclick="showEdit(true)">
                            {{ 'Edit'|trans({}, 'ProductItemField') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}

                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                    <tr>
                        <th scope="row">{{ 'Name'|trans({}, 'ProductItemField') }}</th>
                        <td>{{ productitemfield.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'FieldLabel'|trans({}, 'ProductItemField') }}</th>
                        <td>{{ productitemfield.fieldLabel }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Type'|trans({}, 'ProductItemField') }}</th>
                        <td>{{ productitemfield.type }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'RequiredField'|trans({}, 'ProductItemField') }}</th>
                        <td>{{ productitemfield.requiredField }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Category'|trans({}, 'ProductItemField') }}</th>
                        <td>{{ productitemfield.category }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Created'|trans({}, 'ProductItemField') }}</th>
                        <td>{{ productitemfield.created|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'image'|trans() }}</th>
                        <td>
                            {% if productitemfield.image %}
                                <img src="{{ asset(productitemfield.image) }}" class="img-responsive" style="max-height: 150px;">
                            {% else %}
                                {{ 'no image'|trans()|capitalize }}
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>
        <div class="box" id='editFormProductItemField' style="display: none;">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}
                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm"
                                type="submit"> {{ 'Delete'|trans({}, 'ProductItemField') }}</button>
                        <a class="btn btn-link  btn-sm" onclick="showEdit(false)">
                            {{ 'Cancel'|trans({}, 'Account') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}
                </div>
            </div>
            <div class="box-body">

                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn-default btn" type="submit">{{ 'save'|trans | capitalize }}</button>
                </p>
                {{ form_end(edit_form) }}
            </div>
            <div class="box-footer">
            </div>
        </div>
    </section>

    <div class="btn-group record_actions"></div>

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'ProductItemField') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'ProductItemField') }}
                        , {{ 'this procedure is irreversible'|trans({}, 'ProductItemField') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'ProductItemField') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'ProductItemField') }}</button>
                    <button class="btn btn-default"
                            data-dismiss="modal">{{ 'No'|trans({}, 'ProductItemField') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript">
        function showEdit(show) {
            if (show) {
                $('#showProductItemField').hide();
                $('#editFormProductItemField').show();
            } else {
                $('#showProductItemField').show();
                $('#editFormProductItemField').hide();
            }
        }

    </script>
{% endblock %}