{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block title %}Warehouse - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href="{{ path('admin_warehouse') }}"> {{ 'Warehouse list'|trans({'Warehouse': 'Warehouse'}, 'Warehouse') }}</a>
            /
            {{ 'Warehouse' | trans({}, 'Warehouse') }}
        </h1>
    </section>
    <section class="content">
        <div class="box" id='showWarehouse'>
            <div class="box-header">
                <div class="box-tools  pull-right">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}

                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm"
                                type="submit"> {{ 'Delete'|trans({}, 'Warehouse') }}</button>
                        <input name="modal" type="hidden" value="0">

                        <a class="btn btn-link  btn-sm" onclick="showEdit(true)">
                            {{ 'Edit'|trans({}, 'Warehouse') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}

                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                    <tr>
                        <th scope="row">{{ 'Name'|trans({}, 'Warehouse') }}</th>
                        <td>{{ warehouse.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Phone'|trans({}, 'Warehouse') }}</th>
                        <td>{{ warehouse.phone }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Address'|trans({}, 'Warehouse') }}</th>
                        <td>{{ warehouse.address }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Lat'|trans({}, 'Warehouse') }}</th>
                        <td>{{ warehouse.lat }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Lng'|trans({}, 'Warehouse') }}</th>
                        <td>{{ warehouse.lng }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Enabled'|trans({}, 'Warehouse') }}</th>
                        <td>{% if warehouse.enabled %}<i class="fa fa-check-square-o"></i>{% else %}<i
                                    class="fa fa-square-o"></i>{% endif %}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Archived'|trans({}, 'Warehouse') }}</th>
                        <td>{% if warehouse.archived %}<i class="fa fa-check-square-o"></i>{% else %}<i
                                    class="fa fa-square-o"></i>{% endif %}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Created'|trans({}, 'Warehouse') }}</th>
                        <td>{{ warehouse.created|date }}</td>
                    </tr>
                    <tr>
                        <th scope="row">{{ 'Updated'|trans({}, 'Warehouse') }}</th>
                        <td>{{ warehouse.updated|date }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>
        <div class="box" id='editFormWarehouse' style="display: none;">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}
                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm"
                                type="submit"> {{ 'Delete'|trans({}, 'Warehouse') }}</button>
                        <a class="btn btn-link  btn-sm" onclick="showEdit(false)">
                            {{ 'Cancel'|trans({}, 'Account') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}
                </div>
            </div>
            <div class="box-body">

                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn-default btn" type="submit">{{ 'save'|trans | capitalize }}</button>
                </p>
                {{ form_end(edit_form) }}
            </div>
            <div class="box-footer">
            </div>
        </div>
    </section>

    <div class="btn-group record_actions"></div>

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'Warehouse') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'Warehouse') }}
                        , {{ 'this procedure is irreversible'|trans({}, 'Warehouse') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'Warehouse') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'Warehouse') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'Warehouse') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript">
        function showEdit(show) {
            if (show) {
                $('#showWarehouse').hide();
                $('#editFormWarehouse').show();
            } else {
                $('#showWarehouse').show();
                $('#editFormWarehouse').hide();
            }
        }

    </script>
{% endblock %}