{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body %}
{{ include('FlowcodeMediaBundle:AdminMedia:mediaHeader.html.twig') }}
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">{{ entity.name }}</h3>
            <div class="box-tools">
                <a href="{{ path('admin_product_show', { 'id' : product.id }) }}" class="btn btn-xs btn-link">
                    {{ "Back to the list"|trans }}
                </a>
                <a href="{{ path('admin_gallery_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-link">
                    {{ "edit"|trans }}
                </a>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-condensed">
                <tbody>
                    <tr>
                        <th>Slug</th>
                        <td>{{ entity.slug }}</td>
                    </tr>
                    <tr>
                        <th>Enabled</th>
                        <td>{% if entity.enabled %}{{"yes"|trans}}{% else %}{{"no"|trans}}{% endif %}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Items</h3>
            <div class="box-tools">
                <a href="{{ path('admin_product_new_image', { 'id' : product.id }) }}" class="btn btn-xs btn-link">
                    <i class="fa fa-plus"></i> {{ "add item"|trans }}
                </a>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                {{ include("FlowcodeMediaBundle:AdminGallery:gallery_show_items.html.twig", {'items': entity.galleryItems, 'edit_route': 'admin_product_gallery_edit', 'product': entity}) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
