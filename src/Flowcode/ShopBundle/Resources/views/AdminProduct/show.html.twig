{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}


{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
{% endblock -%}


{% block body -%}
{{ include('FlowcodeShopBundle:AdminProduct:productsHeader.html.twig') }}

<section class="content">
    <div class="box box-solid">
        <div class="box-header">
            <h3 class="box-title">{{ entity.name|title }}</h3>
            <div class="box-tools">
                <a class="btn btn-link btn-sm" href="{{ path('admin_product') }}">
                    {{ "Back to the list"|trans }}
                </a>
                <a class="btn btn-link btn-sm" href="{{ path('admin_product_edit', { 'id': entity.id }) }}">
                    {{ "edit"|trans }}
                </a>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-sm-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">Datos del producto</div>
                        <table class="table table-condensed">
                            <tbody>
                                <tr>
                                    <th>{{ "Id"|trans }}</th>
                                    <td>{{ entity.id }}</td>
                                </tr>
                                <tr>
                                    <th>{{ "Name"|trans }}</th>
                                    <td>{{ entity.name }}</td>
                                </tr>
                                <tr>
                                    <th>{{ "Description"|trans }}</th>
                                    <td>{{ entity.description }}</td>
                                </tr>
                                <tr>
                                    <th>{{ "Content"|trans }}</th>
                                    <td>{{ entity.content|raw }}</td>
                                </tr>
                                <tr>
                                    <th>{{ "Category"|trans }}</th>
                                    <td>{{ entity.category }}</td>
                                </tr>
                                <tr>
                                    <th>{{ "Price"|trans }}</th>
                                    <td>{{ entity.price }}</td>
                                </tr>
                                <tr>
                                    <th>{{ "Enabled"|trans }}</th>
                                    <td>
                                        {% if entity.enabled %}
                                            {{'yes'|trans}}
                                        {% else %}
                                            {{'no'|trans}}
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- IMAGEN -->
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">{{ "item"|trans }}</h3>
                            <div class="box-tools">
                                <a href="{{ path('admin_product_new_image', { 'id' : entity.id }) }}" class="btn btn-xs btn-link">
                                    <i class="fa fa-plus"></i> {{ "add item"|trans }}
                                </a>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="row">
                            {{ include("FlowcodeMediaBundle:AdminGallery:gallery_show_items.html.twig", {'items': entity.getMediaGallery.getGalleryItems, 'edit_route': 'admin_product_gallery_edit', 'product': entity}) }}
                            </div>
                        </div>
                    </div>
                    <!-- VIDEO -->
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">{{ "video"|trans|title }}</h3>
                            <div class="box-tools">
                                <a href="{{ path('admin_product_new_media', { 'id' : entity.id, 'type':"type_video_youtube" }) }}" class="btn btn-xs btn-link">
                                    <i class="fa fa-plus"></i> {{ "add video"|trans }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <img src="{{ asset(entity.getImage.getWebPath) }}" alt="{{ entity.getImage.name }}" class="img-responsive">
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}